<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
	<definition name="principal" template="/WEB-INF/views/layout/principal.jsp">
            <put-attribute name="title" value="BStore"/>
	</definition>
	
	<definition name="indexPrincipal" extends="principal">
		<put-attribute name="header" value="Bienvenido"/>
		<put-attribute name="contenido" value="/WEB-INF/views/jsp/bstore/body.jsp"/>
	</definition>
	
	<definition name="colecciones" extends="principal">
		<put-attribute name="header" value="Novedades"/>
		<put-attribute name="contenido" value="/WEB-INF/views/jsp/bstore/colecciones.jsp"/>
	</definition>
	
	<definition name="publicaciones" extends="principal">
		<put-attribute name="header" value="Publicaciones"/>
		<put-attribute name="contenido" value="/WEB-INF/views/jsp/bstore/publicaciones.jsp"/>
	</definition>
	
	<definition name="editoriales" extends="principal">
		<put-attribute name="header" value="Editoriales"/>
		<put-attribute name="contenido" value="/WEB-INF/views/jsp/bstore/editoriales.jsp"/>
	</definition>
	
	
	<definition name="login" template="/WEB-INF/views/layout/login.jsp">
            <put-attribute name="title" value="BStore"/>
            <put-attribute name="header" value="/WEB-INF/views/layout/header.jsp" />
            <put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp" />
	</definition>
        
	<definition name="registrar" extends="login">
            <put-attribute name="contenido" value="/WEB-INF/views/jsp/page/registrar.jsp"/>
	</definition>
	
	<definition name="password" extends="login">
		<put-attribute name="contenido" value="/WEB-INF/views/jsp/page/password.jsp"/>
	</definition>
        
</tiles-definitions>
