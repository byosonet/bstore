<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
  
  	<!-- DIALECT PARA MYSQL -->
    <property name="org.hibernate.transaction">true</property>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    
    <!-- CONEXION A PRODUCCION PUBLICO
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/goddev</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>-->
    
    <!-- CONEXION A DESARROLLO LOCAL-->
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bstore</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">toor</property>
    
    <!-- PROPIEDADES HIBERNATE -->
    <property name="connection.pool_size">5</property>
    <property name="hibernate.show_sql">false</property>
    <property name="hibernate.format_sql">false</property>
    <property name="hibernate.use_sql_comments">true</property>
    <property name="hibernate.cache.use_query_cache">false</property>
    <property name="hibernate.generate_statistics">false</property>
    <property name="hibernate.cache.use_structured_entries">false</property>
    <property name="hibernate.cache.use_second_level_cache">true</property>
    <property name="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</property>
    <property name="transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
    <property name="current_session_context_class">thread</property>
    
    <!-- MAPPING PARA BSTORE -->
    <mapping resource="com/bstore/services/persistence/mapping/Usuario.hbm.xml"/>
    <mapping resource="com/bstore/services/persistence/mapping/Compra.hbm.xml"/>
    <mapping resource="com/bstore/services/persistence/mapping/FormaPago.hbm.xml"/>
    <mapping resource="com/bstore/services/persistence/mapping/Publicacion.hbm.xml"/>
    <mapping resource="com/bstore/services/persistence/mapping/Fuente.hbm.xml"/>
    <mapping resource="com/bstore/services/persistence/mapping/Editorial.hbm.xml"/>
    <mapping resource="com/bstore/services/persistence/mapping/Coleccion.hbm.xml"/>
    <mapping resource="com/bstore/services/persistence/mapping/Perfil.hbm.xml"/>
    <mapping resource="com/bstore/services/persistence/mapping/Properties.hbm.xml"/>
    <mapping resource="com/bstore/services/persistence/mapping/Plantilla.hbm.xml"/>

  </session-factory>
</hibernate-configuration>